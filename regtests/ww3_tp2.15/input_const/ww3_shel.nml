  HOMOG_INPUT(2)%NAME       = 'TAU'
  HOMOG_INPUT(2)%DATE       ='20140310 030000'
  HOMOG_INPUT(2)%VALUE1     = -0.20
  HOMOG_INPUT(2)%VALUE2     = -0.15

  HOMOG_INPUT(3)%NAME       = 'TAU'
  HOMOG_INPUT(3)%DATE       ='20140310 060000'
  HOMOG_INPUT(3)%VALUE1     = -0.10
  HOMOG_INPUT(3)%VALUE2     = -0.25

  HOMOG_INPUT(4)%NAME       = 'RHO'
  HOMOG_INPUT(4)%DATE       ='20140310 000000'
